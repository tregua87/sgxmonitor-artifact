######## SGX SDK Settings ########

# CC = clang-5.0
# CXX = clang++-5.0
CC=$(LLVM_PATH)/build/bin/clang
CXX=$(LLVM_PATH)/build/bin/clang++


CFLAGS += -Wall -Wextra -Winit-self -Wpointer-arith -Wreturn-type \
                    -Waddress -Wsequence-point -Wformat-security \
                    -Wmissing-include-dirs -Wfloat-equal -Wundef -Wshadow \
                    -Wcast-qual -Wconversion -Wredundant-decls \
										-Wstrict-prototypes -I../../inc

######## Client Objects ########

Client.o: Client.cpp
	@$(CC) $(CFLAGS) -c $< -o $@
	@echo "CC   <=  $<"

.PHONY: clean

clean:
	@rm -f Client.o
